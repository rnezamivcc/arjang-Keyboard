<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFDDDDDD"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:gravity="center"
        >

        <TextView
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:text="@string/tour_title_reach"
            android:id="@+id/tour_reach_title"
            android:layout_gravity="center_horizontal|top"
            android:background="@drawable/info_bg_white"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_horizontal"
            android:textColor="#FF1E87D2"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:text="@string/tour_reach_description_1"
            android:id="@+id/textView2"
            android:layout_gravity="center"
            android:textColor="#FF1E87D2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="24sp"/>

        <com.iknowu.animation.AnimatedFrameLayout
            android:id="@+id/animated_frame_layout"
            android:layout_width="300dp"
            android:layout_height="248dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:layout_gravity="center"
                    android:src="@drawable/keyboard_full"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2"
                    android:layout_gravity="center"
                    android:src="@drawable/arrows"
                    android:adjustViewBounds="false"/>

            <com.iknowu.animation.SlidingThumbImageView
                    android:id="@+id/sliding_thumb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/thumb"
                    />

        </com.iknowu.animation.AnimatedFrameLayout>

        <TextView
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:text="@string/tour_reach_description_2"
            android:id="@+id/tour_reach_description2"
            android:gravity="center"
            android:textColor="#FF1E87D2"
            android:textSize="24sp"/>
        <!--
        <FrameLayout
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1.0">
        </FrameLayout>

        <Button
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="@string/label_next_key"
            android:id="@+id/button_next"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/blue_state_button"
            android:paddingTop="10dp"
            android:layout_marginTop="5dp"
            android:textColor="#FFFFFFFF"
            android:textSize="24sp"/>
            -->
    </LinearLayout>
</ScrollView>