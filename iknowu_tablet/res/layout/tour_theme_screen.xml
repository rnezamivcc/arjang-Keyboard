<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFDDDDDD"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="10dp"
        android:gravity="center"
        >

        <TextView
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:text="@string/tour_themes_title"
            android:id="@+id/tour_reach_title"
            android:layout_gravity="center_horizontal|top"
            android:background="@drawable/info_bg_white"
            android:gravity="center_horizontal"
            android:textColor="#FF1E87D2"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:text="@string/tour_themes_description"
            android:id="@+id/textView2"
            android:layout_gravity="center"
            android:textColor="#FF1E87D2"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="24sp"/>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="248dp"
            android:id="@+id/imageView"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/kb_themes"/>

        <LinearLayout
            android:id="@+id/go_to_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:background="#11000000"
            android:padding="3dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setup_goto_settings_string"
                android:layout_gravity="center"
                android:textColor="#FF1E87D2"
                android:gravity="center"
                android:layout_marginRight="8dp"
                android:textSize="24sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/iknowu_settings_icon"
                android:layout_gravity="center"
                android:gravity="center" />
        </LinearLayout>
        <!--
        <FrameLayout
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1.0">
        </FrameLayout>

        <Button
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="@string/label_next_key"
            android:id="@+id/button_next"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/blue_state_button"
            android:paddingTop="10dp"
            android:layout_marginTop="5dp"
            android:textColor="#FFFFFFFF"
            android:textSize="24sp"/>
            -->
    </LinearLayout>
</ScrollView>