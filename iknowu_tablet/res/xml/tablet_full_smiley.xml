<?xml version="1.0" encoding="utf-8"?>

<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:horizontalGap="1%p"
    android:verticalGap="5dp"
    android:keyHeight="@dimen/key_height">

    <Row android:keyWidth="8%p" android:rowEdgeFlags="top">
        <Key android:codes="-44" android:keyIcon="@drawable/smiley_smile" android:keyOutputText=":-) " keyUprDescriptionLabel="Smile" android:horizontalGap="28%p"/>
        <Key android:codes="-44" android:keyIcon="@drawable/smiley_sad" android:keyOutputText=":-( " keyUprDescriptionLabel="Frown"/>
        <Key android:codes="-44" android:keyIcon="@drawable/smiley_wink" android:keyOutputText=";-) " keyUprDescriptionLabel="Wink"/>
        <Key android:codes="-44" android:keyIcon="@drawable/smiley_tongue" android:keyOutputText=":-P " keyUprDescriptionLabel="Tongue"/>
        <Key android:codes="-44" android:keyIcon="@drawable/smiley_gasp" android:keyOutputText="=-O " keyUprDescriptionLabel="Wow" />
    </Row>

    <Row android:keyWidth="8%p">
        <Key android:codes="-44" android:keyIcon="@drawable/smiley_kiss" android:keyOutputText=":-* " keyUprDescriptionLabel="Kiss" android:horizontalGap="28%p"/>
        <Key android:codes="-44" android:keyIcon="@drawable/smiley_angry" android:keyOutputText=":O " keyUprDescriptionLabel="Yell"/>
        <Key android:codes="-44" android:keyIcon="@drawable/smiley_glasses" android:keyOutputText="B-) " keyUprDescriptionLabel="Cool"/>
        <Key android:codes="-44" android:keyIcon="@drawable/smiley_money" android:keyOutputText=":-$ " keyUprDescriptionLabel="Money"/>
        <Key android:codes="-44" android:keyIcon="@drawable/smiley_scared" android:keyOutputText=":-! " keyUprDescriptionLabel="Scared" />
    </Row>
    <Row android:keyWidth="8%p">
        <Key android:codes="-44" android:keyIcon="@drawable/smiley_blushing" android:keyOutputText=":-[ " keyUprDescriptionLabel="Blushing" android:horizontalGap="28%p" />
        <Key android:codes="-44" android:keyIcon="@drawable/smiley_angel" android:keyOutputText="O:-) " keyUprDescriptionLabel="Innocent"/>
        <Key android:codes="-44" android:keyIcon="@drawable/smiley_crying" android:keyOutputText=":'( " keyUprDescriptionLabel="Crying"/>
        <Key android:codes="-44" android:keyIcon="@drawable/smiley_grin" android:keyOutputText=":-D " keyUprDescriptionLabel="Laugh"/>
        <Key android:codes="-5" android:keyIcon="@drawable/sym_keyboard_backspace" android:keyWidth="15%p" keyDarkBackground="true" android:horizontalGap="22%p"/>
    </Row>
    
	<Row android:keyWidth="8%p" android:keyHeight="@dimen/key_height_bottom_row" android:rowEdgeFlags="bottom">
		<!-- <Key android:codes="-3" android:keyIcon="@drawable/sym_keyboard_done" android:keyWidth="10%p" keyDarkBackground="true"/> -->
		<Key android:codes="-6" android:keyIcon="@drawable/keyabclabel" android:popupKeyboard="@layout/popup_kbchoices" keyDarkBackground="true"/>
		<Key android:codes="44" android:keyLabel="," keyDarkBackground="true" />
		<Key android:codes="32" android:keyWidth="52%p" android:keyIcon="@drawable/sym_keyboard_space" />
		<Key android:codes="46" android:keyLabel="." keyDarkBackground="true" />
		<Key android:codes="10" android:keyIcon="@drawable/sym_keyboard_return" android:keyWidth="18%p" android:popupKeyboard="@layout/popup_smiley" keyDarkBackground="true" />
	</Row>
</Keyboard> 