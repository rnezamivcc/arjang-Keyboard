<?xml version="1.0" encoding="utf-8"?>

<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"

    android:keyHeight="@dimen/key_height"
    android:horizontalGap="0%p"
    android:verticalGap="0%p">
     <Row android:keyWidth="10%p">
     
        <Key android:codes="42" android:keyLabel="*"  android:keyEdgeFlags="left" isCharKey="true"/>
        <Key android:codes="43" android:keyLabel="+" isCharKey="true"/>
        <Key android:codes="45" android:keyLabel="-" isCharKey="true"/>
        <Key android:codes="61" android:keyLabel="=" isCharKey="true"/>
        <Key android:codes="126" android:keyLabel="~" isCharKey="true"/>
        <Key android:codes="60" android:keyLabel="&#60;" isCharKey="true"/>     <!-- comment < -->
        <Key android:codes="62" android:keyLabel="&#62;" isCharKey="true"/>     <!-- comment > -->
        <Key android:codes="47" android:keyLabel="/" isCharKey="true"/>
        <Key android:codes="40" android:keyLabel="(" isCharKey="true"/>
        <Key android:codes="41" android:keyLabel=")"  android:keyEdgeFlags="right" isCharKey="true"/>
        
    </Row>  
   <Row android:keyWidth="10%p">
        <Key android:codes="64" android:keyLabel="\&#64;"  android:keyEdgeFlags="left" isCharKey="true"/>    <!-- comment @ needs to be escaped -->
        <Key android:codes="63" android:keyLabel="\&#63;" isCharKey="true" />  <!-- comment ?sign needs to be escaped -->
        <Key android:codes="35" android:keyLabel="#" isCharKey="true"/>
        <Key android:codes="36" android:keyLabel="$" isCharKey="true"/>
        <Key android:codes="95" android:keyLabel="_" isCharKey="true"/>
        <Key android:codes="92" android:keyLabel="\\" isCharKey="true" />
        <Key android:codes="124" android:keyLabel="|" isCharKey="true"/>
        <Key android:codes="33" android:keyLabel="!" isCharKey="true"/>
        <Key android:codes="38" android:keyLabel="&#38;" isCharKey="true"/>
        <Key android:codes="94" android:keyLabel="^" android:keyEdgeFlags="right" isCharKey="true"/>
    </Row>      
    
   <Row android:keyWidth="12.1%p">
        <Key android:codes="39" android:keyLabel="\'" isCharKey="true" />
        <Key android:codes="8220" android:keyLabel="&#8220;" isCharKey="true" />
        <Key android:codes="37" android:keyLabel="%" isCharKey="true"/>
        <Key android:codes="91" android:keyLabel="[" isCharKey="true"/>
        <Key android:codes="93" android:keyLabel="]" isCharKey="true"/>
        <Key android:codes="9833" android:keyLabel="\u2669" isCharKey="true" />  <!-- quarter note -->
        <Key android:codes="182" android:keyLabel="\u00b6" isCharKey="true"/>    <!--  pilcrow sign -->
        <Key android:codes="-5" android:keyIcon="@drawable/sym_keyboard_backspace" android:keyWidth="15%p" android:keyEdgeFlags="right" keyDarkBackground="true" />
    </Row>
    
    <Row android:keyWidth="10.0%p" android:rowEdgeFlags="bottom" verticalGap="0dp" >
        <!-- <Key android:codes="-3" android:keyIcon="@drawable/sym_keyboard_done"  android:keyWidth="12%p"  android:keyEdgeFlags="left" keyDarkBackground="true"/> -->
        <Key android:codes="-6" android:keyIcon="@drawable/keyabclabel" android:popupKeyboard="@layout/popup_kbchoices" android:keyWidth="12%p" keyDarkBackground="true"/>
        <Key android:codes="44" android:keyLabel="," keyDarkBackground="true" isCharKey="true" />
        <Key android:codes="32" android:keyWidth="56%p" android:keyIcon="@drawable/sym_keyboard_space" isCharKey="true" />
        <Key android:codes="46" android:keyLabel="." keyDarkBackground="true" isCharKey="true" />
        <Key android:codes="10" android:keyIcon="@drawable/sym_keyboard_return" android:keyWidth="11.8%p" android:popupKeyboard="@layout/popup_smiley" android:keyEdgeFlags="right" keyDarkBackground="true" />
    </Row>
</Keyboard>
