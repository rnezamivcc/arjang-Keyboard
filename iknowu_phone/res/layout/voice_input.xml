<?xml version="1.0" encoding="UTF-8"?>

<com.iknowu.voice.VoiceInputLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  > 
    <ListView
    	android:id="@+id/voice_input_list"
    	android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:choiceMode="singleChoice"
		/>
	
	<LinearLayout
    	android:gravity="center"
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="10dp"
		>
    	<ImageView
    		android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:id="@+id/voice_input_button"
			android:src="@drawable/mic_icon_start"
			/>
		<ImageView
    		android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:id="@+id/switch_to_keyboard_button"
			android:src="@drawable/icon_keyboard"
			/>
	</LinearLayout>
</com.iknowu.voice.VoiceInputLinearLayout>